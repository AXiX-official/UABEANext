<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uat="using:UABEANext3.Views.Tools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UABEANext3.Views.Tools.SceneExplorerToolView">
  <UserControl.Styles>
    <Style Selector="TreeViewItem">
      <Setter Property="IsExpanded" Value="True"/>
    </Style>
  </UserControl.Styles>
  <TreeView Margin="0,0,0,0" Background="#252526" Name="GameObjectTreeView" SelectionChanged="GameObjectTreeView_OnSelectionChanged" Items="{Binding RootItems}">
    <TreeView.ItemTemplate>
      <TreeDataTemplate DataType="{x:Type uat:SceneExplorerItem}" ItemsSource="{Binding Children}">
        <TextBlock Text="{Binding Name}" />
      </TreeDataTemplate>
    </TreeView.ItemTemplate>
  </TreeView>
</UserControl>
